<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApp.Mvvm.Pages.Walkthrough">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="Black">
            
            <Label 
                TextColor="White" 
                Text="Project Cynder"
                FontSize="20"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" 
                Margin="0,-100,0,0" 
                FontAttributes="Bold" 
                LineBreakMode="WordWrap"/>
            <Label 
                TextColor="White"
                Text="{Binding DisplayText}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label 
                TextColor="White"
                Text="{Binding DisplayPokeEncounter}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>