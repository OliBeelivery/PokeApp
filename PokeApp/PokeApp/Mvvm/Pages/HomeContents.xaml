<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApp.Mvvm.Pages.HomeContents">
    <ContentPage.Content>
        <StackLayout 
            BackgroundColor="Black">
            <Label 
                TextColor="White" 
                Text="Project Cynder"
                FontSize="20"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" 
                Margin="0,-100,0,0" 
                FontAttributes="Bold" 
                LineBreakMode="WordWrap"/>
            <Button 
                Command="{Binding PokedexContentsCommand}"
                TextColor="White"
                HorizontalOptions="CenterAndExpand" 
                Margin="0" 
                TranslationY="-80" 
                BorderColor="White" 
                Text="Pokedex"/>
            <Button 
                Command="{Binding WalkthroughContentsCommand}"
                TextColor="White"
                HorizontalOptions="CenterAndExpand" 
                Margin="0" 
                TranslationY="-80" 
                BorderColor="White" 
                Text="Walkthrough"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>